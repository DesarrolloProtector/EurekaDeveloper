@model ModalHelp.Models.EditModal.Edit_Model
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "Back" }))
{
    @Html.AntiForgeryToken()
}

<style>
    body {
        background-color: #EBEBEB;
    }

    textarea {
        max-width: 100% !important;
        resize: none;
    }
</style>

@{ 
    var negro = "#1f1f27";
}

<div id="ElDiv" style="display: flex; flex-direction: column; color: @negro; cursor: default;">

    <div style="display: flex; flex-direction: row">
        <div class="text-shadow titulo1">
            MODAL DE <b>@Model.View.Name</b>
        </div>

        <div style="flex: 1"></div>

        <div class="align-self-center">
            <a style="color:black;cursor:pointer;" title="Volver a la lista de módulos" onclick="back();"><i class="fa fa-undo fa-2x" aria-hidden="true"></i></a>
        </div>

    </div>
    <div>
        <hr>
    </div>
    <div style="display: flex; flex: 1;">

        <div style="background-color: red; display: flex; flex-direction: column; flex: 1; height: 64vh">

            <div class="px-2 pb-2" style="background-color: orange; display: flex; flex-direction: column; flex: 2;">
                <div class="titulo3">
                    Informaci&oacute;n de la p&aacute;gina
                </div>

                <div style="height: 100%;">
                    <textarea style="width: 100%; height: 100%;" maxlength="3999"></textarea>
                </div>
            </div>

            <div class="px-2 pb-2" style="background-color: yellow; display: flex; flex-direction: column; flex: 1;">
                <div class="titulo3">
                    Notas
                </div>

                <div style="height: 100%;">
                    <textarea style="width: 100%; height: 100%;" maxlength="3999"></textarea>
                </div>
            </div>

        </div>

        <div class="px-2" style="background-color: blue; display: flex; flex-direction: column; flex: 1; height: 64vh">

            <div style="display: flex; flex-direction: column; height: 140px;">

                <div style="display: flex; flex-direction: row;">
                    <div class="titulo3">
                        Iconos
                    </div>
                    <div style="flex: 1"></div>
                    <div class="align-self-center">
                        <i class="fas fa-plus fa-1x" style="cursor: pointer; color: @negro"></i>
                    </div>
                </div>

                <div class="mb-2" style="background-color: aqua; flex: 1; border: solid 1px @negro">
                    <input id="iconosCount" hidden />
                    <div class="tablaIconos p-2" style="display: flex; flex-direction: column; height: 100%; background-color: purple; overflow: hidden;">
                        <div id="iconosFila1" style="background-color: black; display: flex; flex-direction: row; flex: 1;">
                            @for (int i = 0; i < 10; i++)
                            {
                                <div style="width: 39px; height: 100%; align-content: center; display: flex;">
                                    <i class="m-auto fas fa-file fa-lg" style="cursor: pointer; color: red;"></i>
                                </div>
                            }
                        </div>
                        <div id="iconosFila2" style="background-color: white; display: flex; flex-direction: row; flex: 1;">
                            @for (int i = 0; i < 10; i++)
                            {
                                <div style="width: 39px; height: 100%; align-content: center; display: flex;">
                                    <i class="m-auto fas fa-file fa-lg" style="cursor: pointer; color: red;"></i>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div style="display: flex; flex-direction: column; flex: 1">
                <div class="mb-2" style="background-color: green; display: flex; flex-direction: column; flex: 5">
                    <div class="titulo3">
                        Informaci&oacute;n de Iconos
                    </div>
                    <div style="background-color: greenyellow; flex: 1; border: solid 1px @negro;">

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

