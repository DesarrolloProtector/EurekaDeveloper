
<input id="idSelectedElement" value="" hidden />

<style>
    .tg-grid [tgcolumns="header"] {
        display: grid;
        grid-template-columns: 40px 1fr 30px 30px;
    }

    .tg-grid [tgcolumns="row"] {
        display: grid;
        grid-template-columns: 40px 1fr 30px 30px;
    }

    .endRow {
        grid-template-columns: 20px 1fr 30px 30px !important;
    }

    .sangria {
        padding-left: 30px;
    }

    .fa-plus, .fa-minus {
        color: #8F99A4;
    }
</style>

<div id="tablaModulos" class="tg-grid" name="table">
    <div label-grid="header" tgcolumns="header">
        <div class="alingVcenter alingHcenter">
            <i class="fas fa-plus-square fa-lg" href="#" data-toggle="modal" style="cursor:pointer;" data-target="#modalNuevoModulo" title="Crear Módulo" onclick="FocusInputModal(1)"></i>
        </div>
        <div class="alingVcenter">
            M&oacute;dulos
        </div>
    </div>

    @foreach (var item in Model.Modules)
    {
        { Html.RenderAction("Module", "ModalsManagement", new { module = item }); }
    }
</div>


<!-- Modal editar cuerpo de modal de ayuda -->
<div class="modal fade" id="modalAyuda" tabindex="-1" role="dialog" aria-labelledby="Help" aria-hidden="true" style="position: fixed; top: 0; left: 0; ">
    <div class="modal-dialog modal-dialog-centered modal-xl my-0" role="document" style="height: 100%;">
        <div class="modal-content" style="background-color: #1f1f27; color: #DFDFDF; height: 70%">
            <div class="modal-body p-4" style="display: flex; flex-direction: column;">
                <div class="pb-3" style="display: flex; flex-direction: row; height: min-content">
                    <p class="m-0" style="font-size: 32px; font-weight: 100">
                        MODAL AYUDA
                    </p>
                    <div style="flex: 1"></div>
                    <button type="button" class="close text-light align-self-start" style="display: flex; align-content: center" title="Cerrar" data-dismiss="modal" aria-label="Close">
                        <i class="fas fa-times fa-xs"></i>
                    </button>
                </div>
                <div style="display: flex; flex-direction: column; flex: 1">
                    <div class="pb-4" style="display: flex; flex-direction: column; flex: 1">
                        <div class="pb-2">
                            Cuerpo del modal del la vista <b id="nombreVistaInfo" style="color: dodgerblue"></b>:
                        </div>
                        <textarea id="cuerpoModal" class="p-0 m-0" style="flex: 1; max-width: 100% !important; resize: none; background-color: #DFDFDF; color: #1f1f27" maxlength="3999"></textarea>
                    </div>
                    <div style="display: flex; flex-direction: row">
                        <div style="flex: 1"></div>
                        <button type="button" class="btn buttonCreate mr-4 align-self-end" style="width: 80px;" onclick="GuardarInfoModal()" data-dismiss="modal">Guardar</button>
                        <button type="button" class="btn btn-secondary align-self-end" style="width: 80px;" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal nuevo Modulo -->
<div class="modal fade" id="modalNuevoModulo" tabindex="-1" role="dialog" aria-labelledby="NewModule" aria-hidden="true" style="position: fixed; top: 0; left: 0; ">
    <div class="modal-dialog modal-dialog-centered my-0" role="document" style="height: 100%;">
        <div class="modal-content" style="background-color: #1f1f27; color: #DFDFDF; height: 40%; min-height: 254px">
            <div class="modal-body p-4" style="display: flex; flex-direction: column;">
                <div style="display: flex; flex-direction: row; height: min-content">
                    <p class="m-0" style="font-size: 32px; font-weight: 100">
                        Nuevo M&oacute;dulo
                    </p>
                    <div style="flex: 1"></div>
                    <button type="button" class="close text-light align-self-start" style="display: flex; align-content: center" title="Cerrar" data-dismiss="modal" aria-label="Close">
                        <i class="fas fa-times fa-xs"></i>
                    </button>
                </div>
                <br />
                <div style="display: flex; flex-direction: column; flex: 1">
                    <div class="pb-2 pt-2">
                        Nombre del m&oacute;dulo:
                    </div>
                    <input type="text" id="nombreNuevoModulo" maxlength="1000" style="max-width: 100% !important;" />
                    <span id="alertModuleVoidName" class="text-danger" style="display: none">El campo Nombre no puede estar vac&iacute;o</span>
                    <div style="flex: 1"></div>
                    <div style="display: flex; flex-direction: row">
                        <div style="flex: 1"></div>
                        <button type="button" class="btn buttonCreate mr-4 align-self-end" style="width: 80px;" onclick="CrearElemento(1)" data-dismiss="modal">Crear</button>
                        <button type="button" class="btn btn-secondary align-self-end" style="width: 80px;" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal nueva Vista -->
<div class="modal fade" id="modalNuevaVista" tabindex="-1" role="dialog" aria-labelledby="NewView" aria-hidden="true" style="position: fixed; top: 0; left: 0; ">
    <div class="modal-dialog modal-dialog-centered my-0" role="document" style="height: 100%;">
        <div class="modal-content" style="background-color: #1f1f27; color: #DFDFDF; height: 40%; min-height: 254px">
            <div class="modal-body p-4" style="display: flex; flex-direction: column;">
                <div style="display: flex; flex-direction: row; height: min-content">
                    <p class="m-0" style="font-size: 32px; font-weight: 100">
                        Nueva Vista
                    </p>
                    <div style="flex: 1"></div>
                    <button type="button" class="close text-light align-self-start" style="display: flex; align-content: center" title="Cerrar" data-dismiss="modal" aria-label="Close">
